@{
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var countryCode = ViewContext.RouteData.Values["countryCode"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieData</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/apex/dist/apexcharts.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    @if (!string.IsNullOrEmpty(countryCode))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 bg-light">
                <div class="container p-0">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/logo.png" width="90" height="30" class="d-inline-block align-top m-0" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link  font-weight-bold h5 mx-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  font-weight-bold h5 mx-3" asp-area="" asp-controller="Map" asp-action="Index">Map</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  font-weight-bold h5 mx-3" asp-area="" asp-controller="Map" asp-action="Detail" asp-route-countryCode="@countryCode">For Movie Studios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  font-weight-bold h5 mx-3" asp-area="" asp-controller="Map" asp-action="MovieRanking" asp-route-countryCode="@countryCode">For Movie Holics</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  font-weight-bold h5 mx-3" asp-area="" asp-controller="Map" asp-action="ActorRanking" asp-route-countryCode="@countryCode">For Third Parties</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container-fluid px-5">
        <main role="main" class="pb-3 mx-5">
            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Movie Data - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
